# --- Database ---
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=candidate_news
DB_HOST=db
DB_PORT=5432

# --- PgAdmin ---
PGADMIN_EMAIL=admin@example.com
# Choose a strong password and set from your shell or secrets manager
PGADMIN_PASSWORD=admin123

# --- MCP / Classifier ---
TZ=Asia/Dhaka
HF_MODEL=MoritzLaurer/mDeBERTa-v3-base-xnli-multilingual-nli-2mil7
# Do not commit real API keys. Set OPENAI_API_KEY via your environment or compose secrets.
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
MODEL_PROVIDER=openai
CLASSIFIER_MODE=rule   # or rule / ml /hybrid

# --- Backend ---
API_URL=http://backend:8000
MCP_URL=http://mcp:5000/mcp

# BACKEND_URL=http://backend:8000        # host UI

DB_DSN=postgresql://postgres:postgres@db:5432/candidate_news
PYTHONWARNINGS=ignore::FutureWarning:sklearn
EMB_MODEL=all-MiniLM-L6-v2
# Use only one BACKEND_URL definition
BACKEND_URL=http://backend:8000           # containerized UI

RULE_PRIMARY=0.60
ML_PRIMARY=0.55

# --- Loader ---
CODEBOOK_XLSX=/data/Bangladesh_Election_Media_Monitoring_Codebook.xlsx
NEWS_XLSX=/data/Prothom Alo 2024 Election News.xlsx
